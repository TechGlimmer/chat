<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whatsapp</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>All Chats</h3>
    <p>Here are the recent chats</p>
    <form action="/chats/new" method="get">
        <button>New Chat</button>
    </form>
    <% for(let chat of chats) { %> 
    <div class="chat">
        <p>From: <%= chat.from %></p>
        <div class="msg">
            <p>Message: <%= chat.msg %></p>
            <form action="/chats/<%= chat._id %>/edit" method="get">
                <button>Edit Message</button>
            </form>
            <form action="/chats/<%= chat._id %>/delete" method="get">
                <button>Delete</button>
            </form>
        </div>
        <p>Received by: <%= chat.to %></p>
        <hr>
        <p><%= chat.create_at.toString().split(" ")[4] %></p>
        <p><%= chat.create_at.toString().split(" ").slice(1,4).join("-") %></p>
    </div>
    <% } %>
</body>
</html>

